<Window x:Class="Jan_Exam_2021.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:Jan_Exam_2021"
        mc:Ignorable="d"
        Title="MainWindow" Height="450" Width="800" Loaded="Window_Loaded">
    <Grid>
        <CheckBox x:Name="ChbxCurrentAccounts" Content="Current Accounts" HorizontalAlignment="Left" Margin="40,58,0,0" VerticalAlignment="Top" Click="Chbx_Click"/>
        <CheckBox x:Name="ChbxSavingsAccounts" Content="Savings Accounts" HorizontalAlignment="Left" Margin="179,58,0,0" VerticalAlignment="Top" Click="Chbx_Click"/>
        <ListBox x:Name="LbxAccounts" HorizontalAlignment="Left" Height="269" Margin="40,130,0,0" VerticalAlignment="Top" Width="226" SelectionChanged="LbxAccounts_SelectionChanged"/>
        <TextBlock x:Name="TblkAccountsList" HorizontalAlignment="Left" TextWrapping="Wrap" Text="Accounts List" VerticalAlignment="Top" Margin="40,109,0,0"/>
        <TextBlock x:Name="TblkAccountDetails" HorizontalAlignment="Left" Margin="340,96,0,0" TextWrapping="Wrap" Text="Account Details" VerticalAlignment="Top"/>
        <TextBlock x:Name="TblkFirstName" HorizontalAlignment="Left" Margin="340,130,0,0" TextWrapping="Wrap" Text="First Name" VerticalAlignment="Top"/>
        <TextBlock x:Name="TblkLastName" HorizontalAlignment="Left" Margin="340,165,0,0" TextWrapping="Wrap" Text="Last Name" VerticalAlignment="Top"/>
        <TextBlock x:Name="TblkBalance" HorizontalAlignment="Left" Margin="340,203,0,0" TextWrapping="Wrap" Text="Balance" VerticalAlignment="Top"/>
        <TextBlock x:Name="TblkAccountType" HorizontalAlignment="Left" Margin="340,242,0,0" TextWrapping="Wrap" Text="Account Type" VerticalAlignment="Top"/>
        <TextBlock x:Name="TblkInterestDate" HorizontalAlignment="Left" Margin="340,280,0,0" TextWrapping="Wrap" Text="Interest Date" VerticalAlignment="Top"/>
        <TextBlock x:Name="TblkTransactionAmount" HorizontalAlignment="Left" Margin="340,383,0,0" TextWrapping="Wrap" Text="Transaction Amount" VerticalAlignment="Top"/>
        <TextBlock x:Name="TblkFirstNameInput" HorizontalAlignment="Left" Margin="443,130,0,0" TextWrapping="Wrap" Text="TextBlock" VerticalAlignment="Top"/>
        <TextBlock x:Name="TblkLastNameInput" HorizontalAlignment="Left" Margin="443,165,0,0" TextWrapping="Wrap" Text="TextBlock" VerticalAlignment="Top"/>
        <TextBlock x:Name="TblkBalanceInput" HorizontalAlignment="Left" Margin="443,203,0,0" TextWrapping="Wrap" Text="TextBlock" VerticalAlignment="Top"/>
        <TextBlock x:Name="TblkAccountTypeInput" HorizontalAlignment="Left" Margin="443,242,0,0" TextWrapping="Wrap" Text="TextBlock" VerticalAlignment="Top"/>
        <TextBlock x:Name="TblkInterestDateInput" HorizontalAlignment="Left" Margin="443,280,0,0" TextWrapping="Wrap" Text="TextBlock" VerticalAlignment="Top"/>
        <TextBox x:Name="TbxTransactionAmount" HorizontalAlignment="Left" Height="23" Margin="464,376,0,0" TextWrapping="Wrap" Text="TextBox" VerticalAlignment="Top" Width="120"/>
        <Button x:Name="BtnDeposit" Content="Deposit" HorizontalAlignment="Left" Margin="687,126,0,0" VerticalAlignment="Top" Width="75"/>
        <Button x:Name="BtnWithdraw" Content="Withdraw" HorizontalAlignment="Left" Margin="687,188,0,0" VerticalAlignment="Top" Width="75"/>
        <Button x:Name="BtnInterest" Content="Interest" HorizontalAlignment="Left" Margin="687,256,0,0" VerticalAlignment="Top" Width="75"/>

    </Grid>
</Window>
